@model RoleBasedAuthorizationAssignment.Models.DIO.CartViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<form method="post">
    <br />
    <div class="container" >
        <div class="card">
            <div class="card-header text-dark ml-0" style="background-color:peachpuff;">
                <div class="row">
                    <div class="col-6 pt-2">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Cart
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-outline-info btn-sm" asp-controller="Products" asp-action="Cards">Continue Shopping</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @foreach (var item in Model.ListCart)
                {
                <div class="row">
                    <div class="d-none d-lg-block col-lg-1 text-center py-2">
                        <img src="@item.Product.Product_Image" class="rounded" width="100%" />
                    </div>
                    <div class="col-12 col-lg-6 pt-md-3">
                        <h5><strong>@item.Product.Product_Name</strong></h5>
                        <p><small>@Html.Raw(@item.Product.Product_Description)</small></p>
                    </div>
                    <div class="col-12 col-lg-5 text-center row">
                        <div class="col-4 text-md-right pt-4">
                            <h6><strong>₹ @item.Product.Product_Price<span class="text-muted">&nbsp;x&nbsp;</span>@item.Count</strong></h6>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-6 pt-2">
                            <div class="w-75 btn-group" role="group" style="margin-top:10px;">
                                <button asp-action="Plus" asp-route-cartId="@item.Id"  style="border-radius:200px;width:40px;border-color:mediumpurple;background-color:plum;">
                                    <i class="fa fa-plus-circle" style="color:purple;"></i>
                                </button>&nbsp;
                                <button asp-action="Minus" asp-route-cartId="@item.Id"  style="border-radius: 200px; width: 40px; border-color: mediumpurple; background-color: plum;">
                                    <i class="fa fa-minus-circle" style="color:purple;"></i>
                                </button>
                            </div>

                        </div>
                        <div class="col-2 col-sm-4 col-lg-2 text-right pt-2" style="margin-top:10px;">
                            <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger" style="border-radius:40px;">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <hr />
                }
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-dark">Total</span>
                                <strong class="text-dark">₹@Model.CartTotal.ToString()</strong>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="card-footer">
                <div class="card-footer row">
                    <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6">
                       
                        <a class="btn btn-success form-control" href="https://rzp.io/i/VsXWrau" target="_blank">CheckOut</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

