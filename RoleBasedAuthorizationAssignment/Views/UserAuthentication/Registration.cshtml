@model RoleBasedAuthorizationAssignment.Models.DIO.RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            /* background: #eee;*/
        }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row " style="margin-left:250px;">
                <div class="row">
                    <div class="col-lg-12  border border-primary rounded " style="background-color:saddlebrown;color:palegoldenrod; font-weight:bold; width:350px;">
                        <form method="post" asp-action="Registration">
                            <br /><br />
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="text" asp-for="Email" placeholder="Enter Email" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Password"></label>

                                        <input type="password" asp-for="Password" id="password" placeholder="Enter Password" class="form-control" autocomplete="off" />

                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                            </div>


                            <div class="form-group">
                                <input type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Register" />

                            </div>
                            <div class="form-group">
                                <a class=" font-weight-bold" asp-action="Login" asp-controller="UserAuthentication" style="color:black">Already have an account?Login!</a>

                            </div>


                        </form>

                    </div>
                </div>

                <div class="col-md-5 col-lg-7 col-xl-6">
                    <img src="http://cdn.shopify.com/s/files/1/0561/4102/1319/products/227386819_1208242529603337_6264186201423250623_n.jpg?v=1663453659"
                         class="img-fluid" alt="Sample image" >
                </div>
            </div>
        </div>

    </section>

   
</body>
</html>
